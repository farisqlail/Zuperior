<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".Fragmen.profile">

    <!-- TODO: Update blank fragment layout -->
    <!--Container-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/background"
        android:orientation="vertical">

        <!--  HeaderProfile  -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <!--   FotoProfile     -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fotoprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border_circle_avatar"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/avatarprofil" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!--    EndFotoProfile    -->

            <!--    Text    -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitbold"
                    android:text="Wang Jarim"
                    android:textColor="@color/primary"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/kelas" />

                    <TextView
                        android:id="@+id/tvkelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitolight"
                        android:text="@string/kelas_1"
                        android:textColor="@color/primary"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <!--    EndText    -->

            <!--    EditProfile    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="125dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_edit_profile"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/cardeditprofile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitolight"
                        android:text="Edit Profile"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    EndEditProfile    -->

        </LinearLayout>

        <!--  EndHeaderProfile  -->

        <!--  Mid  -->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/midprofil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:background="@color/bg_card_profile"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--        Point        -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvpoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunitosemibold"
                            android:text="125"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="3dp"
                                android:src="@drawable/ponit" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitolight"
                                android:text="Point"
                                android:textColor="@color/primary"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>
                    <!--        EndPoint        -->

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!--  EndMid  -->

        <!--  MidInformasi Akun  -->

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="251dp"
                android:layout_gravity="center"
                android:background="@color/bg_card_profile"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoregular"
                    android:text="Informasi Akun"
                    android:textColor="@color/primary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white" />

                <!--    UserName     -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Username\t"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdatausername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Wang Jarim"
                        android:textSize="11dp" />

                </LinearLayout>
                <!--    EndUserName  -->

                <!--    PasswordUser        -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Password\t\t"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdatapass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="********"
                        android:textSize="11dp" />

                </LinearLayout>
                <!--    EndPasswordUser        -->

                <!--    InformasiPengguna        -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/nunitoregular"
                    android:text="Informasi Pengguna"
                    android:textColor="@color/primary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white" />

                <!--    EndInformasiPengguna        -->

                <!--    NamaDepan        -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="130dp"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Nama depan\t\t\t"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdatanamadep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Wang"
                        android:textSize="11dp" />

                </LinearLayout>

                <!--    EndNamaDepan       -->

                <!--    NamaBelakang        -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="130dp"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Nama Belakang\t"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdatanamabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Jarim"
                        android:textSize="11dp" />

                </LinearLayout>
                <!--    EndNamaBelakang        -->

                <!--    Email        -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="130dp"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Email\t\t\t\t\t\t\t"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdataemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Jarim@gmail.com"
                        android:textSize="11dp" />

                </LinearLayout>
                <!--    EndEmail        -->


            </LinearLayout>
        </LinearLayout>
        <!--  MidEndInformasi Akun  -->


        <!--  Button Keluar  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="500dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnKeluar"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#C84D2B"
                android:fontFamily="@font/nunitosemibold"
                android:text="Keluar"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--  ButtonKeluar  -->

    </RelativeLayout>
    <!--  EndContainer  -->

</RelativeLayout>