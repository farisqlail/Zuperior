<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/katbg"
    android:layout_gravity="center"
    tools:context=".Activity.artikel_kategori">

    <!--  Container  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/nunitbold"
            android:gravity="center"
            android:text="Materi Pelajaran"
            android:textColor="@color/primary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunitbold"
            android:text="Ilmu Pengetahuan Sosial"
            android:textColor="@color/primary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:fontFamily="@font/nunitolight"
            android:text="Selamat Belajar dan Semangat"
            android:textColor="@color/primary"
            android:textSize="18dp" />

        <!--   class Content     -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:background="@drawable/card_kat_artikel"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunitbold"
                android:gravity="center"
                android:text="Materi Pelajaran"
                android:textColor="@color/primary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <!--    List Artikel        -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginTop="26dp"
                android:orientation="vertical">

                <!--        List View        -->
                <ListView
                    android:id="@+id/lv_artikel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp" />
                <!--        EndList View        -->

            </RelativeLayout>
            <!--    EndList Artikel        -->

        </LinearLayout>

        <!--   End Class Content     -->


    </LinearLayout>

    <!--  EndContainer  -->

</RelativeLayout>